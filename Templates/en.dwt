}});

$.kntktTest();	// validacija kontakt formulara
$("textarea#message").keypress(function(){$.kntktTest()});
$("form#form").change(function(){$.kntktTest()});
// animacija labela u formularu
$("form input, form textarea").focus(function(){ $(this).siblings("span").animate({"margin-top":-15});})
.blur(function(){ if($(this).val()=="") $(this).siblings("span").animate({"margin-top":0});})
.each(function(){ if($(this).val()!=="") $(this).siblings("span").css("margin-top",-15);});
$("form#form input.button:eq(0)").click(function(){
$("form input, form textarea").siblings("span").animate({"margin-top":0});
});

function initialize() {
	var latlng = new google.maps.LatLng(43.9595, 15.4143);
	var myOptions = {
		zoom: 13,
		center: latlng,
		mapTypeId: google.maps.MapTypeId.HYBRID,
		mapTypeControl: true,
		mapTypeControlOptions: {style: google.maps.MapTypeControlStyle.DROPDOWN_MENU
		}
	};
	var map = new google.maps.Map(document.getElementById("gmap"), myOptions);
	var adresa = new google.maps.Marker({
		position: new google.maps.LatLng(43.965918, 15.414323),
		map: map, 
		title:"Delfin Turanj"
		});
	var adresaW = new google.maps.InfoWindow({content:'Ovdje se nalazi naša kuća.'});
	google.maps.event.addListener(adresa, 'click', function() {adresaW.open(map,adresa);});
}

if(typeof google){initialize();}
});
